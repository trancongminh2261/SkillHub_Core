    <table class="ClassTable">
        <tr>
            <th class="ClassTh">Lớp học</th>
            <td class="ClassTd">{ClassName}</td>
        </tr>
        <tr>
            <th class="ClassTh">Giáo viên</th>
            <td class="ClassTd">{TeacherName}</td>
        </tr>
        <tr>
            <th class="ClassTh">Hình thức tham gia</th>
            <td class="ClassTd">{TypeName}</td>
        </tr>
        <tr>
            <th class="ClassTh">Thời gian</th>
            <td class="ClassTd"> <li style="margin-bottom: 5px;">Bắt đầu: {StartDay}</li> <li>Kết thúc: {EndDay}</li> </td>
        </tr>
    </table>
